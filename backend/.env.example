# Base de datos PostgreSQL externa (NUNCA local)
DATABASE_URL="postgresql://usuario:password@host:5432/porton_digital?sslmode=require"

# JWT
JWT_SECRET="cambiar-en-produccion-clave-segura-min-32-chars"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# Servidor
PORT=3001
NODE_ENV=development

# CORS - URL del frontend (separado)
FRONTEND_URL="http://localhost:3000"

# MQTT - Puente IoT ERREKA
MQTT_BROKER_URL="mqtt://broker-url:1883"
MQTT_USERNAME=""
MQTT_PASSWORD=""

# Cooldown anti-spam apertura (segundos)
ACCESS_COOLDOWN_SECONDS=30
